<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroDenunciaFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="729dp"
            tools:layout_editor_absoluteY="1dp">

            <EditText
                android:id="@+id/editTextSugestão"
                style="@style/Edit_text"
                android:layout_width="323dp"
                android:layout_height="57dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Sugestão"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextProblema" />

            <EditText
                android:id="@+id/editTextProblema"
                style="@style/Edit_text"
                android:layout_width="323dp"
                android:layout_height="57dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:hint="Problema"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextEndereco" />

            <EditText
                android:id="@+id/editTextEndereco"
                style="@style/Edit_text"
                android:layout_width="323dp"
                android:layout_height="57dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Endereço"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNomeLocal" />

            <EditText
                android:id="@+id/editTextNomeLocal"
                style="@style/Edit_text"
                android:layout_width="323dp"
                android:layout_height="57dp"
                android:layout_marginTop="48dp"
                android:ems="10"
                android:hint="Nome do Local"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitulo" />

            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Cadastro de Denuncia"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="113dp"
                android:layout_height="117dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintEnd_toStartOf="@+id/bt_imagem"
                app:layout_constraintHorizontal_bias="0.444"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextSugestão" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_imagem"
                style="@style/Button_seleciona_imagem"
                android:layout_width="122dp"
                android:layout_height="75dp"
                android:layout_marginEnd="68dp"
                android:layout_marginBottom="44dp"
                android:text="Selecionar Imagem"
                app:layout_constraintBottom_toTopOf="@+id/bt_maps"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_maps"
                style="@style/Button_maps"
                android:layout_marginTop="4dp"
                android:text="Marcar Localização"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.412"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_cadastrar"
                style="@style/Button"
                android:layout_marginTop="8dp"
                android:text="Cadastrar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bt_maps" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>