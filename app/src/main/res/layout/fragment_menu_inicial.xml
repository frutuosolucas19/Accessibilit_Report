<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewMenuInicial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imagem_ilustrativa_da_tela_principal"
            android:src="@drawable/menulogo"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/azul_login"
            android:text="@string/criarDenuncia"
            android:textStyle="bold"
            android:contentDescription="@string/criar_nova_den_ncia" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/azul_login"
            android:text="@string/minhasDenuncias"
            android:textStyle="bold"
            android:contentDescription="@string/acessar_minhas_den_ncias" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/azul_login"
            android:text="@string/ver_locais"
            android:textStyle="bold"
            android:contentDescription="@string/ver_locais_acess_veis" />
    </LinearLayout>
</ScrollView>
