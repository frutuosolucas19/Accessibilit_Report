<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/azul_login"
    android:padding="20dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imagemPerfil"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/foto_de_perfil_do_usu_rio"
        app:riv_oval="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtNomeUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/nome_do_usu_rio"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/imagemPerfil"
        app:layout_constraintStart_toEndOf="@+id/imagemPerfil"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/btnEditarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/editar_perfil"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:contentDescription="@string/bot_o_para_editar_perfil"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeUsuario"
        app:layout_constraintStart_toStartOf="@+id/txtNomeUsuario" />

</androidx.constraintlayout.widget.ConstraintLayout>
